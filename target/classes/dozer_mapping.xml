<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
      http://dozer.sourceforge.net/schema/beanmapping.xsd">
	<configuration>
		<custom-converters>
			<converter type="com.prowings.main.ModeConverter">
				<class-a>java.lang.Integer</class-a>
				<class-b>java.lang.String</class-b>
			</converter>
 			<converter type="com.prowings.main.DateConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>java.lang.String</class-b>
			</converter>
 			</custom-converters>
	</configuration>
	<mapping>
		<class-a>com.prowings.source.Person</class-a>
		<class-b>com.prowings.dto.Employee</class-b>
		<field>
			<a>name</a>
			<b>firstName</b>
		</field>
	</mapping>
	<mapping>
		<class-a>com.prowings.source.Student</class-a>
		<class-b>com.prowings.dto.Candidate</class-b>
		<field>
			<a>roll</a>
			<b>id</b>
		</field>
		<field>
			<a>name</a>
			<b>Completename</b>
		</field>
		<field>
			<a>addresses</a>
			<b>correspondence</b>
		</field>
	</mapping>
	<mapping>
		<class-a>com.prowings.source.Address</class-a>
		<class-b>com.prowings.dto.AddressDto</class-b>
		<field>
			<a>pincode</a>
			<b>pin</b>
		</field>
		<field>
			<a>cityName</a>
			<b>city</b>
		</field>
		<field>
			<a>country</a>
			<b>country</b>
		</field>
	</mapping>
</mappings>